{
    "$schema": "http://json.schemastore.org/template",
    "author": "Marcos Welington Ferreira",
    "classifications": [
        "Web",
        "ASP.NET",
        "Clean Code",
        "Clean Architecture",
        "Tiers"
    ],
    "identity": "Custom.Template.Tiers",
    "name": "Custom template WebAPI Tiers",
    "description": "This project aims to provide to final user a ddd webapi template using cleancode architecture, this project has no dependencies from core application.",
    "shortName": "webapi-tiers",
    "defaultName": "Template",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "Template",
    "preferNameDirectory": true,
    "symbols": {
        "EnableSwaggerSupport": {
            "type": "parameter",
            "description": "Enables swagger support and configurations file",
            "datatype": "bool",
            "defaultValue": "true"
        },
        "DockerSupport": {
            "type": "parameter",
            "description": "Add dockerfile and docker compose configuration.",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "IncludeSolutionFile": {
            "type": "parameter",
            "description": "Add solution file",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "IncludeTestsXUnit": {
            "type": "parameter",
            "description": "Add XUnit tests",
            "datatype": "bool",
            "defaultValue": "true"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(!EnableSwaggerSupport)",
                    "exclude": [
                        "/External/Template.Presentation/Configurations/SwaggerConfiguration.cs"
                    ]
                },
                {
                    "condition": "(!DockerSupport)",
                    "exclude": [
                        "/docker-compose.dcproj",
                        "/docker-compose.override.yml",
                        "/docker-compose.yml"
                    ]
                },
                {
                    "condition": "(!IncludeSolutionFile)",
                    "exclude": ["/Template.sln"]
                },
                {
                    "condition": "(!IncludeTestsXUnit)",
                    "exclude": ["/Tests/**/*"]
                }
            ],
            "source": "./",
            "target": "./",
            "exclude": [
                "README.md",
                "**/[Bb]in/**",
                "**/[Oo]bj/**",
                ".template.config/**/*",
                ".vs/**/*",
                "**/*.filelist",
                "**/*.user",
                "**/*.lock.json",
                "**/.git/**",
                "*.nuspec"
            ]
        }
    ]
}
